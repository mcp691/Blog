<div class="page">
  <h2><%= link_to post.title, post %></h2>
  <hr>
  <p>Posted on <%= post.created_at.strftime("%m/%d/%Y") %> at <%= post.created_at.strftime("%H:%M") %></p>
  <%= post.content %>
  <br><br>
  <% if signed_in? %>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>
